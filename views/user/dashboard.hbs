<div class="grid lg:grid-cols-[30%_70%] 2xl:grid-cols-[20%_80%] scroll-smooth">
    <!-- SIDE BAR -->
    <div class="bg-gray-100 px-3 pb-5 lg:sticky lg:top-0 lg:self-start lg:h-screen lg:overflow-y-auto">
        {{#if err}}
            <div class="mb-4 mt-5 p-4 rounded-lg border border-red-200 bg-red-50 text-red-700 text-sm text-center shadow-sm">
                {{err}}
            </div>
        {{/if}}
        {{#if succ}}
            <div class="mb-4 mt-5 p-4 rounded-lg border border-green-200 bg-green-50 text-green-700 text-sm text-center shadow-sm">
                {{succ}}
            </div>
        {{/if}}
        <div class="mt-5">
            <button type="button" class="bg-cyan-600 text-white py-3 px-5 rounded w-full cursor-pointer" onclick="window.location.href='/user/booking'" >
                + Neue Reservierung
            </button>
        </div>
        {{#if championship}}
        <div class="text-[17px] my-3 w-full">
            <h2 class="font-bold">Meisterschaft</h2>
        </div>
        <div class="grid gap-2 grid-cols-1">
        {{#each championship}}
            <div class="w-full max-w-xl mx-auto bg-white rounded-2xl shadow-md hover:shadow-lg transition border border-gray-100 p-4 flex items-center justify-between cursor-pointer">
                <div class="flex flex-col border-l-5 border-yellow-600 rounded px-3" style="border-color: {{../chColor}};">
                    <p class="font-semibold text-gray-800 text-lg">vs {{this.note}}</p>
                    <p class="text-sm text-gray-500 mt-1 flex items-center gap-1">
                        <!--<svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" 
                            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" 
                                d="M8 7V3m8 4V3m-9 8h10m-9 4H7m10 0h-1M5 21h14a2 2 0 002-2V7H3v12a2 2 0 002 2z">
                            </path>
                        </svg>-->
                        {{formatDate this.date}} · {{this.starttime}} - {{this.endtime}} Uhr
                    </p>
                </div>
                <div class="bg-yellow-600 p-2 rounded-lg flex items-center justify-center" style="background-color: {{../chColor}};" onclick="openDeleteDialog('{{this.bookingID}}','{{formatDate this.date}}', '{{this.starttime}}', '{{this.endtime}}', '/user/championship/delete/')">
                    <img src="/media/svg/trash.svg" class="w-5 h-5" />
                </div>
            </div>
        {{/each}}
        </div>
        {{/if}}
        <div class="text-[17px] my-3 w-full">
            <h2 class="font-bold">Meine Buchungen</h2>
        </div>
        <div class="grid gap-2 grid-cols-1">
            {{#if bookings}}
            {{#each bookings}}
            <div class="w-full max-w-xl mx-auto bg-white rounded-2xl shadow-md hover:shadow-lg transition border border-gray-100 p-4 flex items-center justify-between cursor-pointer">
                <div class="flex flex-col border-l-5 rounded px-3" style="border-color: {{../bColor}};">
                    <p class="font-semibold text-gray-800 text-lg">Tennisplatz {{this.courtCourtID}}</p>
                    <p class="text-sm text-gray-500 mt-1 flex items-center gap-1">
                        <!--<svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" 
                            viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" 
                                d="M8 7V3m8 4V3m-9 8h10m-9 4H7m10 0h-1M5 21h14a2 2 0 002-2V7H3v12a2 2 0 002 2z">
                            </path>
                        </svg>-->
                        {{this.date}} · {{this.starttime}} - {{this.endtime}} Uhr
                    </p>
                </div>
                <div class="p-2 rounded-lg flex items-center justify-center" style="background-color: {{../bColor}};" onclick="openDeleteDialog('{{this.bookingID}}','{{formatDate this.date}}', '{{this.starttime}}', '{{this.endtime}}', '/user/booking/delete/')">
                    <img src="/media/svg/trash.svg" class="w-5 h-5" />
                </div>
            </div>
            {{/each}}
            {{else}}
                <p class="text-gray-600">Keine bevorstehenden Reservierungen!</p>
            {{/if}}
        </div>

    </div>
    <!-- Main Content -->
    <div class="max-w-full overflow-y-auto">
        <div class="grid gap-1 lg:grid-cols-2 w-[93%] mx-auto">

            <!-- MEISTERSCHAFT -->

            <div class="mx-auto p-6 w-full">
                <div class="bg-white shadow-lg rounded-2xl p-6 border border-gray-200 h-full">
                    <h1 class="text-xl font-bold text-gray-800 mb-2">
                        MEISTERSCHAFT
                    </h1>

                    <form action="/user/championship" method="POST" class="space-y-5">
                        <!-- Gegner -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Gegner
                            </label>
                            <input 
                                type="text" 
                                name="opponent"
                                placeholder="TC Musterverein"
                                class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm 
                                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                    transition duration-200"
                            />
                        </div>
                        <!-- Datum -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Datum
                            </label>
                            <input 
                                type="date" 
                                name="champDate"
                                id="championshipDate"
                                class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm 
                                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                    transition duration-200"
                            />
                        </div>

                        <!-- Von -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Von
                                </label>
                                <input 
                                    type="time"
                                    name="champFrom"
                                    id="championshipFrom"
                                    class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
                                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                        transition duration-200"
                                />
                            </div>

                            <!-- Bis -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Bis
                                </label>
                                <input 
                                    type="time"
                                    name="champTo"
                                    id="championshipTo"
                                    class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
                                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                        transition duration-200"
                                />
                            </div>
                        </div>

                        <!-- Button -->
                        <div class="pt-4">
                            <button 
                                type="submit"
                                class="w-full md:w-auto bg-cyan-600 text-white font-semibold 
                                    px-8 py-3 rounded-lg shadow-md hover:bg-cyan-700 
                                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
                                    transition duration-200"
                            >
                                Speichern
                            </button>
                        </div>
                    </form>
                </div>
            </div>

                <!-- PLATZ SPERREN -->
            
            <div class="mx-auto p-6 w-full">
                <div class="bg-white shadow-lg rounded-2xl p-6 border border-gray-200 h-full">
                    <h1 class="text-xl font-bold text-gray-800 mb-2">
                        PLATZ SPERREN
                    </h1>

                    <form class="space-y-5" action="/user/closure/" method="POST">

                        <!-- Von -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Von
                                </label>
                                <input 
                                    type="datetime-local"
                                    id="closureFrom"
                                    name="from"
                                    class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
                                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                        transition duration-200"
                                />
                            </div>

                            <!-- Bis -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    Bis
                                </label>
                                <input 
                                    type="datetime-local"
                                    id="closureTo"
                                    name="to"
                                    class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm
                                        focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                        transition duration-200"
                                />
                            </div>
                        </div>
                        

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Tennisplatz
                            </label>
                            <select
                                type="text" 
                                name="court"
                                class="w-full rounded-lg border border-gray-300 px-4 py-3 text-sm 
                                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500
                                    transition duration-200"
                            />
